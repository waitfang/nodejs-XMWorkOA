head
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(rel="stylesheet", href="/javascripts/layui/css/layui.css") 
    script(src="/javascripts/comm/jquery-2.2.2.min.js") 
    script(src="/javascripts/layui/layui.js") 
body 
    div
        br
        div
            form(class="layui-form layui-form-pane")
                div(class="layui-form-item")    
                    label(class="layui-form-label",style="width:25%") 账号
                    div(class="layui-input-inline",style="width:55%")
                        input(type="text" id="txtUSERID" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input")
                
                div(class="layui-form-item")
                    label(class="layui-form-label",style="width:25%") 名称
                    div(class="layui-input-inline",style="width:55%" )
                        input(type="text" id="txtUSERNAME" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input") 
                
                div(class="layui-form-item")    
                    label(class="layui-form-label" ,style="width:25%") 密码
                    div(class="layui-input-inline" ,style="width:55%")
                        input(type="text" id="txtUSERPASSWORD" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input")
                
                div(class="layui-form-item")
                    label(class="layui-form-label" ,style="width:25%") 状态
                    div(class="layui-input-inline" )
                         select(id="drpState") 
                            option(value="0") 启用
                            option(value="1") 停用 

                div(class="layui-form-item")                          
                    label(class="layui-form-label" ,style="width:25%") 电话号码
                    div(class="layui-input-inline",style="width:55%")
                        input(type="text" id="txtTELEPHONE" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input")
                
                div(class="layui-form-item")
                    label(class="layui-form-label" ,style="width:25%") EMAIL
                    div(class="layui-input-inline" ,style="width:55%")
                        input(type="text" id="txtEMAIL" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input") 
              
                 div(class="layui-form-item")
                    label(class="layui-form-label" ,style="width:25%;height:100px;padding:40px;") 备注
                    div(class="layui-input-inline" ,style="width:55%")
                        input(type="text" id="txtMARK" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-textarea") 
                         
              
script layui.use(['table'], function(){});         